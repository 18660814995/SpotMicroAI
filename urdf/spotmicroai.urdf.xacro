<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="SpotMicroAI">

  <material name="yellow">
    <color rgba="0.92 0.83 0.0 1"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  <material name="grey">
    <color rgba="0.6 0.6 0.6 1"/>
  </material>

  <!-- Params -->

  <xacro:property name="body_length" value="0.140" />
  <xacro:property name="body_width" value="0.110" />
  <xacro:property name="body_height" value="0.070" />

  <xacro:property name="front_length" value="0.058" />
  <xacro:property name="rear_length" value="0.057" />

  <xacro:property name="shoulder_length" value="0.044" />
  <xacro:property name="shoulder_width" value="0.038" />

  <!-- Macros -->

  <xacro:macro name="gen_shoulder" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="${shoulder_length} ${shoulder_width} ${body_height}"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <material name="black"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="gen_leg" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="0.028 0.036 0.120"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 -0.050"/>
        <material name="yellow"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="gen_foot" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="0.026 0.020 0.155"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 -0.070"/>
        <material name="black"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="gen_toe" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="0.020" radius="0.014"/>
        </geometry>
        <origin rpy="1.5708 0 0" xyz="0 0 0"/>
        <material name="grey"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="gen_foot_joint" params="pos">
    <joint name="${pos}_foot" type="revolute">
      <parent link="${pos}_leg_link"/>
      <child link="${pos}_foot_link"/>
      <axis xyz="0 1 0"/>
      <origin xyz="-0.01 0 -0.120"/>
      <limit effort="1000.0" lower="-0.1" upper="2.59" velocity="0.5"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="gen_toe_joint" params="pos">
    <joint name="${pos}_toe" type="fixed">
      <parent link="${pos}_foot_link"/>
      <child link="${pos}_toe_link"/>
      <origin xyz="0 0 -0.155"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="gen_leg_joint" params="pos shift">
    <joint name="${pos}_leg" type="revolute">
      <parent link="${pos}_shoulder_link"/>
      <child link="${pos}_leg_link"/>
      <axis xyz="0 1 0"/>
      <origin xyz="0 ${shift} 0"/>
      <limit effort="1000.0" lower="-2.666" upper="1.548" velocity="0.5"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="gen_shoulder_joint" params="pos shiftx shifty">
    <joint name="${pos}_shoulder" type="revolute">
      <parent link="base_link"/>
      <child link="${pos}_shoulder_link"/>
      <axis xyz="1 0 0"/>
      <origin xyz="${shiftx} ${shifty} 0"/>
      <limit effort="1000.0" lower="-0.548" upper="0.548" velocity="0.5"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="gen_full_leg_joint" params="pos shiftx shifty shift">
    <xacro:gen_shoulder name="${pos}_shoulder_link"/>
    <xacro:gen_leg name="${pos}_leg_link"/>
    <xacro:gen_foot name="${pos}_foot_link"/>
    <xacro:gen_toe name="${pos}_toe_link"/>

    <xacro:gen_shoulder_joint pos="${pos}" shiftx="${shiftx}" shifty="${shifty}"/>
    <xacro:gen_leg_joint pos="${pos}" shift="${shift}"/>
    <xacro:gen_foot_joint pos="${pos}"/>
    <xacro:gen_toe_joint pos="${pos}"/>
  </xacro:macro>

  <!-- Robot Body -->

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${body_length} ${body_width} ${body_height}"/>
      </geometry>
      <material name="yellow"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <link name="rear_link">
    <visual>
      <geometry>
        <box size="${rear_length} ${body_width} ${body_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.145 0 0"/>
      <material name="yellow"/>
    </visual>
  </link>
  <joint name="base_rear" type="fixed">
    <parent link="base_link"/>
    <child link="rear_link"/>
  </joint>

  <link name="front_link">
    <visual>
      <geometry>
        <box size="${front_length} ${body_width} ${body_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.145 0 0"/>
      <material name="yellow"/>
    </visual>
  </link>
  <joint name="base_front" type="fixed">
    <parent link="base_link"/>
    <child link="front_link"/>
  </joint>

  <!-- create Legs -->
  
  <xacro:gen_full_leg_joint pos="front_left" shiftx="-0.093" shifty="-0.036" shift="-0.042"/>
  <xacro:gen_full_leg_joint pos="front_right" shiftx="-0.093" shifty="0.036" shift="0.042"/>
  <xacro:gen_full_leg_joint pos="rear_left" shiftx="0.093" shifty="-0.036" shift="-0.042"/>
  <xacro:gen_full_leg_joint pos="rear_right" shiftx="0.093" shifty="0.036" shift="0.042"/>

</robot>